<%= form_for @user do |f| %>
	<% @user.errors.any? %>
	<% @user.errors.full_messages.each do |msg| %>
			<p>
				<%= msg %>
			</p>
		</div>
	<% end %>		
  <div class="field">
		<div class = 'inner-div'>
			<h2>Create account</h2>
		
				<%= f.text_field :username, placeholder: "Username", :class => 'text' %>

				<%= f.email_field :email, placeholder: "Email", :class => 'text' %>

				<%= f.password_field :password, placeholder: "Password", :class => 'text' %>

				<%= f.submit 'submit', :class => 'submit' %>
			</div>
		</div>
<% end %>
